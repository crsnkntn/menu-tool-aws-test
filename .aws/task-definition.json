{
    "family": "flask-task",
    "containerDefinitions": [
      {
        "name": "flask-container",
        "image": "${ECR_REGISTRY}/${ECR_REPOSITORY}:${IMAGE_TAG}",
        "memory": 2048,
        "cpu": 1024,
        "essential": true,
        "portMappings": [
          {
            "containerPort": 5000,
            "hostPort": 5000,
            "protocol": "tcp"
          }
        ]
      }
    ],
    "requiresCompatibilities": ["FARGATE"],
    "networkMode": "awsvpc",
    "cpu": "1024",
    "memory": "2048",
    "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole"
  }
  